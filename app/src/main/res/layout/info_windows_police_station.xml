<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        style="@android:style/TextAppearance.Widget.PopupMenu.Small"
        android:id="@+id/namePoliceStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        style="@android:style/TextAppearance.Small"
        android:id="@+id/idJurisdiction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:padding="2dp" />

    <TextView
        style="@android:style/TextAppearance.Widget.PopupMenu.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/police_chief" />

    <TextView
        style="@android:style/TextAppearance.Widget.PopupMenu.Small"
        android:id="@+id/namePoliceBoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.keniobyte.bruino.minsegapp.utils.SquareImageView
        android:id="@+id/profilePoliceChief"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/phonePoliceChief"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>