<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.navegationDrawer.ItemInitial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="379dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:src="@drawable/logo_init" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/square_small_police" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_police">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/call_911"
            android:textStyle="bold"
            android:textSize="60dp"
            android:textColor="@color/accent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/buttonPhoneEmergency"
            android:layout_toStartOf="@+id/buttonPhoneEmergency" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonPhoneEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:src="@drawable/ic_call_green_48dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
